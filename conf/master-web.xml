<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE web-app
     PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
     "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
 
 <web-app>
     <display-name>Test servlet for CIS455</display-name>
     
     <servlet-mapping>
         <servlet-name>default</servlet-name>
         <url-pattern>*.html</url-pattern>
     </servlet-mapping>
     
    <servlet>
        <servlet-name>CrawlerMaster</servlet-name>
        <servlet-class>crawler.servlet.CrawlerMaster</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CrawlerMaster</servlet-name>
        <url-pattern>/master/*</url-pattern>
    </servlet-mapping>
    
    <context-param>
     	<param-name>flushData</param-name>
     	<param-value>no</param-value>
     </context-param>
     
     <context-param>
     	<param-name>flushQueue</param-name>
     	<param-value>no</param-value>
     </context-param>
     
     <context-param>
     	<param-name>maxUrls</param-name>
     	<param-value>10000</param-value>
     </context-param>
</web-app>
