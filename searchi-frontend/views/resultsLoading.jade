doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  title Searchi
  link(href='css/bootstrap.min.css', rel='stylesheet')
  link(href='css/results.css', rel='stylesheet')
  link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css')
  link(rel='stylesheet', href='//blueimp.github.io/Gallery/css/blueimp-gallery.min.css')
  link(rel='stylesheet', href='css/bootstrap-image-gallery.min.css')

body
  nav.navbar.navbar-default.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.pull-left(href='/')
          img#brandImg('alt'='Searchi', 'src'='/images/searchi_navbar.png')
      #navbar1.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            button#localSearchBtn.btn.btn-margin.btn-primary.navbar-btn(type='button') Local
          li
            button#twitterSearchBtn.btn.btn-margin.btn-primary.navbar-btn(type='button', disabled='disabled') Twitter
          li
            button#amazonSearchBtn.btn.btn-margin.btn-primary.navbar-btn(type='button', disabled='disabled') Amazon
          li
            button#imageSearchBtn.btn.btn-margin.btn-warning.navbar-btn(type='button') Images
        ul.nav.navbar-nav.navbar-right
          form.navbar-form.navbar-left(role='search')
            .form-group
              input#searchBox.form-control(type='search', size='60', required='required', value=q, placeholder='Enter your query')
              button#searchButton.btn.btn-default(type='button')
                i.glyphicon.glyphicon-search

  .container#weatherResult
  .container#searchResults
    .progress
      .progress-bar.progress-bar-striped.active(role='progressbar', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100', style='width: 100%')
        span.sr-only Loading...


script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
script(src='js/bootstrap.min.js')
script(src='js/results.js')
script(src='//blueimp.github.io/Gallery/js/jquery.blueimp-gallery.min.js')
script(src='js/bootstrap-image-gallery.min.js')